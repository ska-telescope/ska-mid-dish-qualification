    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "DiSQ GUI",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/ska_mid_disq/mvcmain.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "DISQ_CONFIG": "${workspaceFolder}/disq.ini"
            }
        },
        {
            "name": "Server Validator",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "-x",
                "resources/ds_icd_0.0.5.xml",
                "-c",
                "cetc54_simulator",
                "-f",
                "disq.ini"
            ],
            "program": "${workspaceFolder}/src/disq/server_validator.py",
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}