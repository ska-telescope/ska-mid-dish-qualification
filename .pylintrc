[MAIN]
ignore=
    ds_opcua_server_mock.py,
    ui_resources.py,

extension-pkg-allow-list=PySide6

[FORMAT]
max-line-length = 88

[MESSAGES CONTROL]
disable=
    import-error,
    no-name-in-module,
    duplicate-code,
    fixme,
    logging-fstring-interpolation

[SIMILARITIES]
min-similarity-lines=7
ignore-imports=yes