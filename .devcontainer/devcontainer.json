{
  "name": "${containerWorkspaceFolderBasename}",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "features": {
    "ghcr.io/devcontainers/features/desktop-lite:1": {}
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash",
            "args": [
              "--login"
            ]
          }
        },
        "terminal.integration.defaultProfile.linux": "bash",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit"
        },
        "python.pythonPath": "/usr/bin/python3",
        "python.testing.pytestEnabled": true,
        "pylint.path": [
          "/usr/local/bin/pylint"
        ],
        "pylint.args": [
          "--extension-pkg-whitelist=PyQt6"
        ],
        "[python]": {
          "editor.defaultFormatter": "ms-python.black-formatter"
        },
        "isort.args": [
          "--profile",
          "black"
        ],
        "coverage-gutters.manualCoverageFilePaths": [
          "${containerWorkspaceFolder}/build/reports/code-coverage.xml"
        ],
        "coverage-gutters.showLineCoverage": true
      },
      "extensions": [
        "lextudio.restructuredtext",
        "ms-python.black-formatter",
        "ms-python.flake8",
        "ms-python.isort",
        "ms-python.mypy-type-checker",
        "ms-python.pylint",
        "ms-python.python",
        "ryanluker.vscode-coverage-gutters",
        "tamasfe.even-better-toml",
        "trond-snekvik.simple-rst"
      ]
    }
  },
  "postCreateCommand": "pip install --no-warn-script-location -e .[dev] && export PATH='$PATH:/home/tango/.local/bin'",
  // "postCreateCommand": "sudo poetry config virtualenvs.create false && sudo poetry install",
  "remoteUser": "tango"
}